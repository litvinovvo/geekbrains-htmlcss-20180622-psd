include ../button/button
mixin hot-deal()
    .container
        +b.hot-deal&attributes(attributes)
            .hot-deal__slides
                .hot-deal__slide.slide.row
                    .slide__img-container(style="background-image: url(img/slider-img2.jpg);")
                        img.slide__img.img-fluid(src="img/slider-img2.jpg")
                    .slide__text.col-md-12
                        .section-container
                            .slide__tag Hot Deal
                            .slide__title Fishnet Chair
                            .slide__details Seat and back with upholstery made of cold cure foam. Steel frame,<br>available in matt powder-coated black
                            +btn('chevron-right',23) Order Us
            ul.hot-deal__nav
                li.hot-deal__nav-item
                    a.hot-deal__nav-link(href="#")
                li.hot-deal__nav-item.hot-deal__nav-item--active
                    a.hot-deal__nav-link(href="#")
                li.hot-deal__nav-item		
                    a.hot-deal__nav-link(href="#")						






