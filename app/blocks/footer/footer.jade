include ../icon/icon
mixin footer() 
    .footer
        .container.footer__background 
            .section-container
                .row
                    .col-lg-3
                        .footer__title contact us
                        .footer__p 132A Bridge Road Richmond VIC <br> Australia.
                        .footer__p Talk to us on 1300 132 <br> info@interior.com
                    .col-lg-5
                        .footer__title useful information
                        .row
                            .col-lg-6
                                ul.footer__list
                                    li.footer__list-el 
                                        a.footer__list-link(href="#") sales terms
                                    li.footer__list-el
                                        a.footer__list-link(href="#") customer care
                                    li.footer__list-el
                                        a.footer__list-link(href="#") delivery
                            .col-lg-6
                                ul.footer__list.footer__no-left-padding
                                    li.footer__list-el
                                        a.footer__list-link(href="#") architect account    
                                    li.footer__list-el
                                        a.footer__list-link(href="#") careers
                                    li.footer__list-el
                                        a.footer__list-link(href="#") exchanges & returns       

                    .col-lg-4
                        .footer__title let's stay in touch!
                        .footer__p Suscribe to know about our latest news, products and <br>special offers just for suscribers.
                        .footer__subscribe
                            input.footer__input(type="text",placeholder="your email address")                    
                            a.footer__send(href='#')
                                +icon('paper-plane','','svg-icon-plane')(width="22",height="22")



                .row.footer__common    
                    .col-lg-4
                        .footer__copy Â© Copyright - INTERIOR 2016. All Rights Reserved.
                    .col-lg-4
                        .footer__social
                            a.footer__social-icon(href='#')
                                +icon('facebook','','svg-icon-social')(width="14",height="14") 
                            a.footer__social-icon(href='#')
                                +icon('twitter','','svg-icon-social')(width="14",height="14")
                            a.footer__social-icon(href='#')
                                +icon('google','','svg-icon-social')(width="14",height="14")                               
                            a.footer__social-icon(href='#')
                                +icon('pinterest-p','','svg-icon-social')(width="14",height="14")                                                                               
                    .col-lg-4.footer__terms-block
                        a.footer__terms(href="#") Terms & Conditions  /  Privacy policy & Cookies             
