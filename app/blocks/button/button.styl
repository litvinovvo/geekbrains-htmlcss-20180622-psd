.btn
	cursor pointer
	font-size 16px
	font-weight 700
	color text-black
	border-radius 100px
	border none
	text-transform uppercase
	background-color #ffffff
	box-shadow 0px 2px 4.85px 0.15px rgba(33, 33, 33, 0.35)
	padding 10px 10px 10px 20px
	letter-spacing 3px
	transition all .1s
	text-decoration none
	display inline-block
	line-height 1.15
	@media (min-width md-bp)
		padding 12px 24px 12px 30px
		font-size 18px			
	&__icon
		vertical-align bottom
		margin-left 5px
		transform translateX(0)
		transition all .2s

	&--icon
		padding 6px
		margin 0
		border-radius 50%
		&__icon
			margin-left 0
	&--link
		box-shadow none
		border-radius 0
		background-color inherit
		padding 0
		// padding 12px 0 13px 30px
		.btn__icon
			margin-left -6px
			margin-right -7px

.btn:hover
	.btn__icon
		transform translateX(3px)
.btn:active
	box-shadow 0px 1px 1.85px 0.15px rgba(33, 33, 33, 0.35)
.btn.btn--link:active
	box-shadow none
	color text-gray

.btn.btn--icon:hover
	.btn__icon
		transform scale(1.13)

